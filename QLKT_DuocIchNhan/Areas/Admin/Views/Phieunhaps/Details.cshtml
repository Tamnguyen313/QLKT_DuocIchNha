@using QLKT_DuocIchNhan.Help
@model IEnumerable<QLKT_DuocIchNhan.Areas.Admin.Models.Chitietphieunhap>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}

<div class="col-sm-12">
    <h1> Chi tiết Phiếu nhập </h1>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Mã phiếu nhập
                </th>
                <th class="text-center">
                    Mã thuốc
                </th>
                <th class="text-center">
                    Tên thuốc
                </th>
                <th class="text-center">
                    Nhà cung cấp
                </th>
                <th class="text-center">
                    Mã lô thuốc
                </th>
                <th class="text-center">
                    Số lượng nhập
                </th>
                <th class="text-center">
                    Đơn vị tính
                </th>
                <th class="text-center">
                    Đơn giá
                </th>
                <th class="text-center">
                    Thuế
                </th>
                <th class="text-center">
                    Thành tiền
                </th>
                <th class="text-center">
                    Ghi chú
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Maphieunhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mathuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenthuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tennhacungcap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Malothuoc)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Soluongnhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Donvitinh)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Dongia)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Thue)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Thanhtien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ghichu)
                </td>
            </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Back to List", "Index")
</div>

@section _Footer
{
    <script src="/Areas/Admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}