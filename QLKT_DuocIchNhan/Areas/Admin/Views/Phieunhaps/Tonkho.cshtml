@using QLKT_DuocIchNhan.Help
@model IEnumerable<QLKT_DuocIchNhan.Areas.Admin.Models.TonKho>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}

<div class="col-sm-12">
    <h1> Quản lý Tồn Kho </h1>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Mã thuốc
                </th>
                <th class="text-center">
                    Số lượng nhập
                </th>
                <th class="text-center">
                    Số lượng xuất
                </th>
                <th class="text-center">
                    Tồn kho
                </th>
                <th class="text-center">
                    Cảnh báo
                </th>
                <th class="text-center">
                    Hạn sử dụng
                </th>
                <th class="text-center">
                    Số ngày hết hạn
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mathuoc)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Soluongnhap)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Soluongxuat)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Ton_kho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Canh_bao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Het_han)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.So_ngay_hh)
                </td>
            </tr>
            }
        </tbody>
    </table>
    Số lượng hết hạn:
    @foreach (var item in Model)
    {
        @item.Sl_het_han
        break;
    }
</div>

@section _Footer
{
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}