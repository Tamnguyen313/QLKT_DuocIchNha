@using QLKT_DuocIchNhan.Help
@model IEnumerable<QLKT_DuocIchNhan.Areas.Admin.Models.Phieunhap>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}

<div class="col-sm-12">
    <h1> Quản lý Phiếu nhập </h1>
    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Mã phiếu nhập
                </th>
                <th class="text-center">
                    Mã NCC
                </th>
                <th class="text-center">
                    Người lập phiếu
                </th>
                <th class="text-center">
                    Ngày lập phiếu
                </th>
                <th class="text-center">
                    Ghi chú
                </th>
                <th class="text-center">
                    Sửa
                </th>
                <th class="text-center">
                    Chi tiết
                </th>
                <th class="text-center">
                    Xóa
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Maphieunhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manhacungcap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nguoilapphieu)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Ngaylapphieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ghichu)
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Sửa", "Edit", "Phieunhaps", routeValues: new { id = item.Maphieunhap }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Chi tiết", "Details", "Phieunhaps", routeValues: new { id = item.Maphieunhap }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Xoá", "Delete", "Phieunhaps", routeValues: new { id = item.Maphieunhap }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section _Footer
{
    <script src="/Areas/Admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}