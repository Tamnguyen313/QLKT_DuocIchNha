@using AdminKho.Help
@model IEnumerable<AdminKho.Areas.Admin.Models.Thuoc>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
     DataTables CSS 
    <link href="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
     DataTables Responsive CSS 
    <link href="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}

<div class="col-sm-12">
    <h1> Quản lý Thuốc </h1>
    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Tên thuốc
                </th>
                <th class="text-center">
                    Mã NCC
                </th>
                <th class="text-center">
                    Mã nhóm thuốc
                </th>
                <th class="text-center">
                    Nhà cung cấp
                </th>
                <th class="text-center">
                    Mã lo thuốc
                </th>
                <th class="text-center">
                    Đơn vị tính
                </th>
                <th class="text-center">
                    Sl tối thiểu
                </th>
                <th class="text-center">
                    Sl tối đa
                </th>
                <th class="text-center">
                    Giá tiền
                </th>
                <th class="text-center">
                    Ghi chú
                </th>
                <th class="text-center">
                    Sửa
                </th>
                <th class="text-center">
                    Xóa
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenthuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manhacungcap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manhomthuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nhacungcap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Malothuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Donvitinh)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Soluongtoithieu)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Soluongtoida)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Giatien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ghichu)
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Sửa", "Edit", "Thuocs", routeValues: new { id = item.Mathuoc }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Xoá", "Delete", "Thuocs", routeValues: new { id = item.Mathuoc }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section _Footer
{
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}
