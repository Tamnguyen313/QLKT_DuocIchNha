@using AdminKho.Help
@model IEnumerable<AdminKho.Areas.Admin.Models.Lothuoc>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/Admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">
}

<div class="col-sm-12">
    <h1> Quản lý Lô Thuốc </h1>
    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Mã thuốc
                </th>
                <th class="text-center">
                    Tên lo thuốc
                </th>
                <th class="text-center">
                    Ngày lập
                </th>
                <th class="text-center">
                    Ngày xuất
                </th>
                <th class="text-center">
                    Ngày hết hạn
                </th>
                <th class="text-center">
                    Sửa
                </th>
                <th class="text-center">
                    Xóa
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mathuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenlothuoc)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Ngaynhap)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Ngayxuat)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Ngayhethan)
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Sửa", "Edit", "Lothuocs", routeValues: new { id = item.Malothuoc }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
                <td class="text-center">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Xoá", "Delete", "Lothuocs", routeValues: new { id = item.Malothuoc }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section _Footer
{
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}
